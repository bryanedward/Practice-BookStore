@page
@using WebApplication.Models
@model WebApplication.Pages.BookList.Edit

<div class="border container p-3">
    <h3>Editar Información</h3>
    <form method="post">
        <input type="hidden" asp-for="Books.Id"/>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Author"></label>
            </div>
            <div class="col-5">
                <input asp-for="Books.Author" class="form-control"/>
            </div>
            <span asp-validation-for="Books.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.NameBook"></label>
            </div>
            <div class="col-5">
                <input asp-for="Books.NameBook" class="form-control"/>
            </div>
            <span asp-validation-for="Books.NameBook" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.ISBN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Books.ISBN" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Books.ISBN"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-4">
                <input value="Actualizar" type="submit" class="btn btn-primary form-control"/>
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Regresar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}

