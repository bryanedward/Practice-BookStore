@page
@using System.Linq
@model WebApplication.Pages.BookList.Index

@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html>
<head>
    <title>Lista de libros</title>
</head>
<body>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h3 class="text-info">Lista de Libros</h3>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control">Agregar libros</a>
    </div>
    <div class="col-12">
        @if (Model.Bookses.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Bookses.FirstOrDefault().NameBook"></label>
                    </th>
                    <th>
                        @Html.DisplayNameFor(data => data.Bookses.FirstOrDefault().Author)
                    </th>
                    <th>
                        <label>Eliminar / Editar</label>
                    </th>
                </tr>
                @foreach (var item in Model.Bookses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m=>item.NameBook)
                        </td> 
                        <td>
                            @Html.DisplayFor(m=>item.Author)
                        </td>
                        <td>
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                            <a class="btn btn-success btn-sm">Editar</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No hay libros</p>
        }
    </div>
</div>
</body>
</html>